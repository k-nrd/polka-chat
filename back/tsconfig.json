{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": false,
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
